<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
	<name>System - JBZoo Price Update</name>
	<author>V.Kalinin</author>
	<creationDate>December 2019</creationDate>
